{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "title": "User like",
  "description": "Validates a user id to increase the like counter",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "ID of the user",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    }
  },
  "required": ["id"]
}
